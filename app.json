{
  "system": {
    "buildmode": "release",
    "sequences": [
      {
        "id": "contactid",
        "increment": 1,
        "format": "$current:0000"
      },
      {
        "id": "accountid",
        "increment": 1,
        "format": "$current:0000"
      }
    ]
  },
  "entities": [
    {
      "id": "contact",
      "name": "Contact",
      "pluralName": "Contacts",
      "description": "Contains information about the Contacts of this company",
      "idField": "contactid",
      "nameField": "fullname",
      "fields": [
        {
          "id": "contactid",
          "label": "Contact Id",
          "description": "Id of the Contact",
          "type": "string",
          "maxLength": 100,
          "sequence": "contactid"
        },
        {
          "id": "fullname",
          "label": "Full Name",
          "description": "Full Name of the Contact",
          "type": "string",
          "maxLength": 600,
          "formula":"contact.treatment+contact.name+contact.lastname"
        },
        {
          "id": "treatment",
          "label": "Treatment",
          "description": "Treatment of the Contact",
          "type": "optionset",
          "values": [
            {
              "id": 1,
              "text": "Mr."
            },
            {
              "id": 2,
              "text": "Mrs."
            },
            {
              "id": 3,
              "text": "Miss"
            },
            {
              "id": 4,
              "text": "Dr."
            }
          ]
        },
        {
          "id": "name",
          "label": "Name",
          "description": "Name of the Contact",
          "type": "string",
          "maxLength": 100,
          "required": true
        },
        {
          "id": "lastname",
          "label": "Last Name",
          "description": "Last Name of the Contact",
          "type": "string",
          "maxLength": 100
        },
        {
          "id": "age",
          "label": "Age",
          "description": "Age of the Contact",
          "type": "integer"
        },
        {
          "id": "parentaccountid",
          "label": "Parent Account",
          "description": "Account this Contact belongs to",
          "type": "lookup",
          "lookupTypes": [
            "account"
          ]
        },
        {
          "id": "receivenewsletter",
          "label": "Receive Newsletter",
          "description": "Indicates if the Contact wants to receive the company Newletter",
          "type": "optionset",
          "defaultValue":2,
          "format":"radiobutton",
          "values": [
            {"id":1,"text":"Yes"},
            {"id":2,"text":"No"}
          ]
        },
        {
          "id": "notes",
          "label": "Notes",
          "description": "Notes about the contact",
          "type": "string",
          "format": "multiline"
        },
        {
          "id": "createdon",
          "label": "Created On",
          "description": "The date this Contact was created",
          "type": "datetime"
        },
        {
          "id": "updatedon",
          "label": "Updated On",
          "description": "The date this Contact was updated",
          "type": "datetime"
        },        
        {
          "id": "status",
          "label": "Status",
          "description": "Status of the Contact",
          "type": "optionset",
          "values": [
            {
              "id": 1,
              "text": "Active"
            },
            {
              "id": 2,
              "text": "Inactive"
            }
          ]
        }
      ],
      "views": [
        {
          "id": "all",
          "name": "All active contacts",
          "columns": [
            {
              "id": "fullname",
              "width": 200
            },
            {
              "id": "parentaccountid",
              "width": 100
            },
            {
              "id": "createdon",
              "width": 100
            },
            {
              "id": "status",
              "width": 100
            }
          ],
          "filter": {
            "operator": "and",
            "conditions": [
              {
                "field": "state",
                "operator": "equals",
                "values": [
                  1
                ]
              }
            ]
          }
        }
      ],
      "forms": [
        {
          "id": "main",
          "title": "Contacts",
          "description": "Creates/Updates Contact records",
          "sections": [
            {
              "id": "main",
              "text": "Main",
              "description": "Contains main information for a Contact",
              "content": [
                {
                  "id": "field1",
                  "field": "fullname",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": true,
                  "required": true
                },
                {
                  "id": "field2",
                  "field": "treatment",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": true,
                  "required": true
                },
                {
                  "id": "field3",
                  "field": "parentaccountid",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": true,
                  "required": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "account",
      "name": "Account",
      "pluralName": "Accounts",
      "description": "Contains information about the Accounts of this company",
      "idField": "accountid",
      "nameField": "name",
      "fields": [
        {
          "id": "accountid",
          "label": "Account Id",
          "description": "Id of the Account",
          "type": "string",
          "sequence": "accountid"
        },
        {
          "id": "name",
          "label": "Name",
          "description": "Name of the Account",
          "type": "string",
          "required": true,
          "maxLength": 300
        },
        {
          "id": "createdon",
          "label": "Created On",
          "description": "The date this Account was created",
          "type": "datetime"
        },
        {
          "id": "updatedon",
          "label": "Updated On",
          "description": "The date this Account was updated",
          "type": "datetime"
        },
        {
          "id": "status",
          "label": "Status",
          "description": "Status of the Account",
          "type": "optionset",
          "required": true,
          "values": [
            {
              "id": 1,
              "text": "Active"
            },
            {
              "id": 2,
              "text": "Inactive"
            }
          ]
        }
      ],
      "views": [
        {
          "id": "all",
          "name": "All active accounts",
          "columns": [
            {
              "id": "name",
              "width": 200
            },
            {
              "id": "createdon",
              "width": 100
            }
          ],
          "filter": {
            "operator": "and",
            "conditions": [
              {
                "field": "state",
                "operator": "equals",
                "values": [
                  1
                ]
              }
            ]
          }
        }
      ],
      "forms": [
        {
          "id": "main",
          "title": "Accounts",
          "description": "Creates/Updates Account records",
          "sections": [
            {
              "id": "main",
              "text": "Main",
              "description": "Contains main information for an Account",
              "content": [
                {
                  "id": "field1",
                  "field": "name",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": true,
                  "required": true
                },
                {
                  "id": "field2",
                  "field": "createdon",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": false
                },
                {
                  "id": "field3",
                  "field": "updatedon",
                  "visible": true,
                  "labelVisible": true,
                  "enabled": false
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "sitemap": [
    {
      "id": "home",
      "url": "/home",
      "text": "Home"
    },
    {
      "id": "crm",
      "text": "CRM",
      "items": [
        {
          "id": "contacts",
          "entity": "contact"
        },
        {
          "id": "accounts",
          "entity": "account"
        }
      ]
    }
  ]
}